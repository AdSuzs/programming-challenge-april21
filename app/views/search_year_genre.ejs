<h2> <%= genreMov %> movies of <%= yearMov %></h2>

<div class="search">
  <form action="/movie" method="get" class="form-inline my-2 my-lg-0">
    <label class="control-label" for="searchMovie">Movie's Year and a Genre:</label>
    <input class="form-control mr-sm-2" id="searchMovie" name="year" type="text" placeholder="Movie Year">
    <select class="custom-select" name="genre">
      <option selected="">Movie Genre</option>
      <% genres.forEach(function(genre){%>
        <option value=<%=genre%> ><%=genre%></option>
      <%}); %> 
    </select>
    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>
<% if(movie){ %>
  <ul class="list-group">
    <% movie.forEach(function(movies) { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= movies.title %> 
      </li>
    <% }); %>
  </ul>
<%} %> 
<% if(!movie){ %>
  <h4>Nothing found for: year = <%= yearMov %> and genre = <%= genreMov %></h4>
<%} %> 