<h2>Search for movies and the top best rated movies !</h2>
<div class="search-methods">
  <div class="search">
    <form action="/movie" method="get" class="form-inline my-2 my-lg-0">
      <label class="control-label" for="searchMovie">Movie's Year and a Genre:</label>
      <input class="form-control mr-sm-2" id="searchMovie" name="year" type="text" placeholder="Movie Year">
      <select class="custom-select" name="genre">
        <option selected="">Movie Genre</option>
        <% genres.forEach(function(genre){%>
          <option value=<%=genre%> ><%=genre%></option>
        <%}); %> 
      </select>
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
  
  <div class="search">
    <form action="/rating" method="get" class="form-inline my-2 my-lg-0">
      <label class="control-label" for="searchMovie">Rank the top:</label>
      <input class="form-control mr-sm-2" id="searchMovie" name="num" type="text" placeholder="Number to rank">
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</div>
